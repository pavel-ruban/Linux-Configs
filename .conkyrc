background no
update_interval 0.04

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 0
gap_y 50
minimum_size 305 450
maximum_width 303

own_window yes
own_window_type normal
own_window_title conky
own_window_class conky
own_window_transparent yes
own_window_argb_visual yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr

draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no
#default_shade_color #292721

override_utf8_locale yes
use_xft yes
xftfont ubuntu mono:size=8
xftalpha 0.5
uppercase no

default_color FFFFFF
color1 DDDDDD
color2 AAAAAA
color3 888888

lua_load ~/conky/conky.lua
lua_load ~/conky/clock_rings.lua
lua_draw_hook_post main
#lua_load ~/conky/equalizer.lua
lua_draw_hook_pre widgets
lua_draw_hook_pre clock_rings

#${rss https://planet.archlinux.org/rss20.xml 1 item_titles 10 }
